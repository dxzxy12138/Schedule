<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/todo_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/item_horizontal_margin">

    <ToggleButton
        android:id="@+id/is_done"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/toggle_button_bg"
        android:checked="false"
        android:textOff=""
        android:textOn="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/item_vertical_margin"
        android:paddingLeft="@dimen/item_horizontal_margin"
        android:paddingRight="@dimen/item_horizontal_margin"
        android:paddingTop="@dimen/item_vertical_margin">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:text="Hello Title 你好"
            android:textColor="@color/colorGray"
            android:textSize="?font16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_vertical_margin" />

        <TextView
            android:id="@+id/dateline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:clickable="false"
            android:focusable="false"
            android:text="Hello Date 时间"
            android:textColor="@color/colorLightGray" />

    </LinearLayout>

</LinearLayout>